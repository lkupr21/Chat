<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/message_horizontal_padding"
    android:paddingVertical="@dimen/message_vertical_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_left"
        android:orientation="vertical"
        android:padding="@dimen/message_inner_padding">

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/message_line_spacing"
            android:text="@string/hey_how_are_you"
            android:textColor="@color/message_text_color"
            android:textSize="@dimen/small_message_text_size" />
    </LinearLayout>
</LinearLayout>
